                .container#my-name
                    h1  YAROSLAV HYRYCH
                    h5  Web Developer

                #device

            section.content.u-full-width

                header.container
                    h1 MY PROJECTS

                each project in projects
                    + project(project)

            section.content.u-full-width.inset-shadow#skills
                header.container
                    h1 WORK WITH

                each skill in skills
                    + skillrow(skill)

        #menu-btn
            span.line_0
            span.line_1
            span.line_1
