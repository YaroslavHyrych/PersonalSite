    body
        aside#menu
            h2 MENU

            section.container
                h3 MY PROJECTS

                each project in projects
                    a(href= project.url).row
                        .u-pull-left
                            img(src= project.img)
                        .name=  project.name

            section.container
                h3 WORK WITH

                each skill in skills
                    .row
                        h3= skill.name
                    each lib in skill.libs
                        .row
                            .u-pull-left
                                div(class='#{lib.img}', title='#{lib.name}')
                            h4.name=  lib.name

        main#main
            section.u-full-width#front-page
                header.u-full-width
                    nav.container.row
                        ul.twelve.columns
                            each contact in contacts
