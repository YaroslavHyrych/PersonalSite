mixin contact(style, text, url)
    li
        a(href=url, target='_blank')
            div(class=style, text=text)


mixin project(project)
    article(class='u-full-width #{project.className}')
        .container
            .four.columns.project-logo
                img(src=project.logo)
            .eight.columns
                header
                    h4= project.name
                p= project.description
                footer
                    a(href=project.url, target="_blank")
                        .button VIEW DETAILS

mixin skill(img)
    .four.columns
        img(src=img)